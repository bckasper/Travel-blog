<div class="is-three-quarters block panel is-primary is-centered is-vcentered">
  <h1 class="panel-heading has-text-centered">Read Reviews</h1>
</div>

<!-- Loop over each object in the blogs array -->
{{#if blogs.length}}
<div class="columns is-three-quarters p-6 blog-list">
  <div class="column is-three-quarters">
    {{#each blogs as |blog| }}
    <div class="box mb-4 blog-details">
      <div class="block">
        <h2 class="title is-5 has-text-left">
          <a href="/blogs/{{blog.id}}">{{blog.name}}</a>
        </h2>
      </div>
      <div class="block">
        <p>
          {{blog.description}}
        </p>
        <div class="block delete-button">
          <button id="delete-button" data-id="{{blog.id}}" type="submit" class="button is-primary my-3">Delete</button>

        </div>
      </div>
    </div>
    {{/each}}
  </div>
</div>
{{/if}}
<script src="./js/read-review.js"></script>