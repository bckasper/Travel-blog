<div class="columns is-centered">
  <div class="box block is-half is-mobile is-centered is-vcentered">
    <h2 class="block subtitle">Login</h2>
    <form>
      <div class="field">
        <label class="label" for="email-login">Email:</label>
        <input class="input" type="text"/>
      </div>
      <div class="field">
        <label class="label" for="password-login">Password:</label>
        <input class="input" type="password"/>
      </div>
      <div class="field">
        <button class="button is-primary" type="submit">Login</button>
      </div>
    </form>
  </div>


  <div class="box block is-half is-mobile is-centered is-vcentered">
    <h2 class="block subtitle">Create an Account</h2>
    <form>
      <div class="field">
        <label class="label" for="name-signup">Name:</label>
        <input class="input" type="text"/>
      </div>
      <div class="field">
        <label class="label" for="email-signup">Email:</label>
        <input class="input" type="text"/>
      </div>
      <div class="field">
        <label class="label" for="password-signup">Password:</label>
        <input class="input" type="password"/>
      </div>
      <div class="field">
        <button class="button is-primary" type="submit">Signup</button>
      </div>
    </form>
  </div>

  <div class="box is-hidden">

  </div>
</div>

